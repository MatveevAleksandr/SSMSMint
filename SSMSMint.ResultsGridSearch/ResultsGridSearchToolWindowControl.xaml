<UserControl x:Class="SSMSMint.ResultsGridSearch.ResultsGridSearchToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SSMSMint.ResultsGridSearch" d:DataContext="{d:DesignInstance Type=local:ResultsGridSearchToolWindowViewModel}"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="ResultsGridSearchToolWindow">
    <UserControl.Resources>
        <local:GridLookInToBooleanConverter x:Key="GridLookInToBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="LightGridLinesStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0.2" />
            <Setter Property="BorderBrush" Value="LightGray" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Search text:"/>
        <TextBox Grid.Row="1"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 x:Name="SearchTextBox" 
                 VerticalContentAlignment="Center" 
                 Height="25"/>

        <!--Search Options-->
        <StackPanel Grid.Row="2"
                    Margin="0,10,0,0">
            <Separator Height="10"/>
            <CheckBox Content="Match Case" IsChecked="{Binding MatchCase}"/>
            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        Margin="0,10,0,0">
                <Label Content="Look in:" />
                <RadioButton GroupName="LookInGrid" 
                             Content="Current Grid" 
                             VerticalContentAlignment="Center" 
                             Margin="10,5"
                             IsChecked="{Binding GridLookIn, Converter={StaticResource GridLookInToBooleanConverter}, ConverterParameter={x:Static local:GridLookIn.CurrentGrid}}"/>
                <RadioButton GroupName="LookInGrid" 
                             Content="All Grids" 
                             VerticalContentAlignment="Center" 
                             Margin="10,5"
                             IsChecked="{Binding GridLookIn, Converter={StaticResource GridLookInToBooleanConverter}, ConverterParameter={x:Static local:GridLookIn.AllGrids}}"/>
            </StackPanel>
            <Separator Height="10"/>
        </StackPanel>

        <!-- Results List -->
        <DataGrid
            Grid.Row="3" 
            ItemsSource="{Binding FindAllSearchResults}"
            CellStyle="{StaticResource LightGridLinesStyle}"
            GridLinesVisibility="None"
            Margin="0,10,0,0"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            MouseDoubleClick="FindAllSearchResultsDoubleClick"
            Visibility="{Binding HasFindAllSearchResults, Converter={StaticResource BooleanToVisibilityConverter}}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Grid" Width="Auto" Binding="{Binding DisplayGridNumber}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Row" Width="Auto" Binding="{Binding DisplayRowNumber}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Column" Width="Auto" Binding="{Binding DisplayColHeader}"/>
                <DataGridTextColumn Header="Data" Width="*" Binding="{Binding CellData}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Grid.Row="4" 
               Content="{Binding FindAllSearchResultsCountText}" 
               Visibility="{Binding HasFindAllSearchResults, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <Separator Grid.Row="5" Height="10"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Find Prev" Width="80" Margin="0,0,10,0" Command="{Binding FindPrevCommand}"/>
            <Button Content="Find Next" Width="80" Margin="0,0,10,0" Command="{Binding FindNextCommand}"/>
            <Button Content="Find All" Width="80" Command="{Binding FindAllCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>