<UserControl x:Class="SSMSMint.MixedLangInScriptWordsCheck.Views.MixedLangWordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SSMSMint.MixedLangInScriptWordsCheck.Views"
             xmlns:converters="clr-namespace:SSMSMint.MixedLangInScriptWordsCheck.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">
    <UserControl.Resources>
        <converters:LineIndexToDisplayConverter x:Key="LineIndexToDisplayConverter"/>
        <converters:ColumnIndexToDisplayConverter x:Key="ColumnIndexToDisplayConverter"/>
    </UserControl.Resources>
    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Padding="5">
        <DockPanel>
            <TextBlock Name="TBWord"
                 Foreground="#374151"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 DockPanel.Dock="Left"
                 Margin="10,0,0,0"/>
            <StackPanel Orientation="Vertical" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right" 
                        DockPanel.Dock="Right">
                <TextBlock Text="{Binding LineIndex, ElementName=root, Converter={StaticResource LineIndexToDisplayConverter}}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Foreground="#2D4156"/>
                <Rectangle Width="40" 
                           Height="1" 
                           HorizontalAlignment="Right"
                           Fill="#E0E0E0"/>
                <TextBlock Text="{Binding ColumnIndex, ElementName=root, Converter={StaticResource ColumnIndexToDisplayConverter}}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Foreground="#2D4156"/>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
