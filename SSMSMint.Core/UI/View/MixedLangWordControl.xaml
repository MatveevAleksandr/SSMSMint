<UserControl x:Class="SSMSMint.Core.UI.View.MixedLangWordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SSMSMint.Core.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">
    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Padding="5">
        <DockPanel>
            <TextBlock Name="TBWord"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 DockPanel.Dock="Left"
                 Margin="10,0,0,0"/>

            <Grid VerticalAlignment="Center" 
                  HorizontalAlignment="Right" 
                  DockPanel.Dock="Right">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Line: "
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Grid.Column="0"
                           Grid.Row="0"/>
                <TextBlock Text="{Binding LineIndex, ElementName=root}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Grid.Column="1"
                           Grid.Row="0"/>
                <Rectangle Width="40" 
                           Height="1" 
                           HorizontalAlignment="Right"
                           Fill="#E0E0E0"
                           Grid.Column="0"
                           Grid.Row="1"
                           Grid.ColumnSpan="2"/>
                <TextBlock Text="Column: "
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Grid.Column="0"
                           Grid.Row="2"/>
                <TextBlock Text="{Binding ColumnIndex, ElementName=root}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Grid.Column="1"
                           Grid.Row="2"/>
            </Grid>

            <!--<StackPanel Orientation="Vertical" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right" 
                        DockPanel.Dock="Right">
                <TextBlock Text="{Binding LineIndex, ElementName=root, Converter={StaticResource LineIndexToDisplayConverter}}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
                <Rectangle Width="40" 
                           Height="1" 
                           HorizontalAlignment="Right"
                           Fill="#E0E0E0"/>
                <TextBlock Text="{Binding ColumnIndex, ElementName=root, Converter={StaticResource ColumnIndexToDisplayConverter}}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
            </StackPanel>-->
        </DockPanel>
    </Border>
</UserControl>
