<UserControl x:Class="SSMSMint.Core.UI.View.ResultsGridSearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SSMSMint.Core.UI.View" 
             xmlns:viewmodels="clr-namespace:SSMSMint.Core.UI.ViewModels" 
             xmlns:converters="clr-namespace:SSMSMint.Core.UI.Converters" 
             xmlns:models="clr-namespace:SSMSMint.Core.UI.Models" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="ResultsGridSearchToolWindow">
    <UserControl.Resources>
        <converters:GridLookInToBooleanConverter x:Key="GridLookInToBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Search text:"/>
        <TextBox Grid.Row="1"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 x:Name="SearchTextBox" 
                 VerticalContentAlignment="Center" 
                 Height="25"/>

        <!--Search Options-->
        <StackPanel Grid.Row="2"
                    Margin="0,10,0,0">
            <Separator Height="10"/>
            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center">
                <CheckBox Content="Match Case" IsChecked="{Binding MatchCase}"/>
                <CheckBox Content="Match whole cell" IsChecked="{Binding MatchWholeCell}" Margin="15,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        Margin="0,10,0,0">
                <Label Content="Look in:" />
                <RadioButton GroupName="LookInGrid" 
                             Content="Current Grid" 
                             VerticalContentAlignment="Center" 
                             Margin="10,5"
                             IsChecked="{Binding GridLookIn, Converter={StaticResource GridLookInToBooleanConverter}, ConverterParameter={x:Static models:GridLookInTypeEn.CurrentGrid}}"/>
                <RadioButton GroupName="LookInGrid" 
                             Content="All Grids" 
                             VerticalContentAlignment="Center" 
                             Margin="10,5"
                             IsChecked="{Binding GridLookIn, Converter={StaticResource GridLookInToBooleanConverter}, ConverterParameter={x:Static models:GridLookInTypeEn.AllGrids}}"/>
            </StackPanel>
            <Separator Height="10"/>
        </StackPanel>

        <!-- Results List -->
        <ListView 
            Grid.Row="3" 
            ItemsSource="{Binding FindAllSearchResults.GridCells}"
            Margin="0,10,0,0"
            Visibility="{Binding HasFindAllSearchResults, Converter={StaticResource BooleanToVisibilityConverter}}"
            SelectionChanged="SearchResultItemSelectionChanged">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:SearchResultItemControl 
                        GridIndex="{Binding GridIndex}"
                        RowIndex="{Binding Point.Row}"
                        ColHeader="{Binding ColHeader}"
                        CellData="{Binding Data}"
                        HighlightText="{Binding DataContext.FindAllSearchResults.SearchText, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                        MatchCase="{Binding DataContext.FindAllSearchResults.MatchCase, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Grid.Row="4" 
               Visibility="{Binding HasFindAllSearchResults, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Run Text="Found: "/>
            <Run Text="{Binding FindAllSearchResultsCount, Mode=OneWay}"/>
        </TextBlock>
        <Separator Grid.Row="5" Height="10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Find Prev" Width="80" Margin="0,0,10,0" Command="{Binding FindPrevCommand}"/>
            <Button Content="Find Next" Width="80" Margin="0,0,10,0" Command="{Binding FindNextCommand}"/>
            <Button Content="Find All" Width="80" Command="{Binding FindAllCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>